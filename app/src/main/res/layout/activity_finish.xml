<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/finish_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/finish"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"/>

    <TextView
        android:id="@+id/tv_welldone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/focus_summary"
        android:textAlignment="center"
        android:textColor="@color/bg_blue_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_welldone"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/text_orange"/>


    <TextView
        android:id="@+id/tv_keepup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_summary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/keep_it_up"
        android:textAlignment="center"
        android:textColor="@color/bg_blue_dark"
        android:textSize="30sp" />


</RelativeLayout>