<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/now_applist_layout">

    <TextView
        android:id="@+id/tv_1suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Apps"
        android:layout_marginTop="45dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_light"
        android:textSize="27sp"
        />
    <View
        android:id="@+id/titleLine"
        android:layout_below="@id/tv_1suggest"
        android:layout_marginTop="10dp"
        android:layout_height="2px"
        android:background="#000000"
        android:layout_width="fill_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLine"
        android:layout_marginBottom="80dp">

        <ListView
            android:id="@+id/now_app_list"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"/>

        <!--<include layout="@layout/item_lock_top"/>-->
    </LinearLayout>

</RelativeLayout>