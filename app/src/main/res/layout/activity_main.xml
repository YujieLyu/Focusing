<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Welcome_Activity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/fish1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Welcome to Focusing!"
        android:textColor="@color/text_white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_start_now"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="300dp"
        android:background="@color/bg_white"
        android:contextClickable="true"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Start Now!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/tv_start_now"
        android:layout_marginTop="30dp"
        android:background="@color/bg_white"
        android:contextClickable="true"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/tv_profile"
        android:layout_marginTop="30dp"
        android:background="@color/bg_white"
        android:contextClickable="true"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Schedule"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"


        android:textStyle="bold" />


