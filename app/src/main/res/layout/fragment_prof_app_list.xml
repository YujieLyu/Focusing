<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/prof_app_list_layout"
    tools:context=".View.Profile.ProfAppListFragment">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_below="@id/tv_1suggest"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_search"
        android:backgroundTint="@color/lite_black">

    </android.support.v7.widget.SearchView>

    <TextView
        android:id="@+id/tv_1suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Apps to Lock"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/roboto_light"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp">

        <ListView
            android:id="@+id/prof_app_list"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:background="@color/transparent_white"
            android:layout_height="match_parent"/>

        <!--<include layout="@layout/item_lock_top"/>-->
    </LinearLayout>


</RelativeLayout>